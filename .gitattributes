# Auto detect text files and normalize line endings to LF
* text=auto

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# Gradle wrapper
gradlew text eol=lf
gradlew.bat text eol=crlf

# Windows batch files
*.bat text eol=crlf
*.cmd text eol=crlf

# PowerShell scripts
*.ps1 text eol=crlf

# Java/Kotlin source files
*.java text eol=lf
*.kt text eol=lf
*.gradle text eol=lf

# Documentation
*.md text eol=lf
README* text eol=lf

# YAML/JSON
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf

# Binary files
*.jar binary
*.class binary
*.zip binary
