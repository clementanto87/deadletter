{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "containerAppName": {
      "type": "string",
      "defaultValue": "deadletter-app",
      "metadata": {
        "description": "Name of the Container App"
      }
    },
    "containerRegistryName": {
      "type": "string",
      "defaultValue": "deadletterregistry",
      "metadata": {
        "description": "Name of the Container Registry"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources"
      }
    },
    "imageName": {
      "type": "string",
      "defaultValue": "deadletter:latest",
      "metadata": {
        "description": "Container image name"
      }
    },
    "minReplicas": {
      "type": "int",
      "defaultValue": 1,
      "metadata": {
        "description": "Minimum number of replicas"
      }
    },
    "maxReplicas": {
      "type": "int",
      "defaultValue": 3,
      "metadata": {
        "description": "Maximum number of replicas"
      }
    }
  },
  "variables": {
    "environmentName": "deadletter-env",
    "registryUrl": "[concat(parameters('containerRegistryName'), '.azurecr.io')]"
  },
  "resources": [
    {
      "type": "Microsoft.ContainerRegistry/registries",
      "apiVersion": "2023-01-01-preview",
      "name": "[parameters('containerRegistryName')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "Basic"
      },
      "properties": {
        "adminUserEnabled": true,
        "publicNetworkAccess": "Enabled"
      }
    },
    {
      "type": "Microsoft.App/managedEnvironments",
      "apiVersion": "2023-04-01-preview",
      "name": "[variables('environmentName')]",
      "location": "[parameters('location')]",
      "properties": {}
    },
    {
      "type": "Microsoft.App/containerApps",
      "apiVersion": "2023-04-01-preview",
      "name": "[parameters('containerAppName')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.App/managedEnvironments', variables('environmentName'))]",
        "[resourceId('Microsoft.ContainerRegistry/registries', parameters('containerRegistryName'))]"
      ],
      "properties": {
        "managedEnvironmentId": "[resourceId('Microsoft.App/managedEnvironments', variables('environmentName'))]",
        "configuration": {
          "ingress": {
            "external": true,
            "targetPort": 8080,
            "transport": "auto",
            "allowInsecure": false
          },
          "registries": [
            {
              "server": "[variables('registryUrl')]",
              "username": "[listCredentials(resourceId('Microsoft.ContainerRegistry/registries', parameters('containerRegistryName')), '2023-01-01-preview').username]",
              "passwordSecretRef": "registry-password"
            }
          ],
          "secrets": [
            {
              "name": "registry-password",
              "value": "[listCredentials(resourceId('Microsoft.ContainerRegistry/registries', parameters('containerRegistryName')), '2023-01-01-preview').passwords[0].value]"
            }
          ]
        },
        "template": {
          "containers": [
            {
              "name": "[parameters('containerAppName')]",
              "image": "[concat(variables('registryUrl'), '/', parameters('imageName'))]",
              "resources": {
                "cpu": "0.5",
                "memory": "1Gi"
              },
              "probes": [
                {
                  "type": "liveness",
                  "httpGet": {
                    "path": "/actuator/health",
                    "port": 8080
                  },
                  "initialDelaySeconds": 5,
                  "periodSeconds": 30,
                  "timeoutSeconds": 10,
                  "failureThreshold": 3
                },
                {
                  "type": "readiness",
                  "httpGet": {
                    "path": "/actuator/health/ready",
                    "port": 8080
                  },
                  "initialDelaySeconds": 5,
                  "periodSeconds": 10,
                  "timeoutSeconds": 5,
                  "failureThreshold": 3
                }
              ]
            }
          ],
          "scale": {
            "minReplicas": "[parameters('minReplicas')]",
            "maxReplicas": "[parameters('maxReplicas')]"
          }
        }
      }
    }
  ],
  "outputs": {
    "containerAppUrl": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.App/containerApps', parameters('containerAppName'))).properties.configuration.ingress.fqdn]"
    },
    "registryUrl": {
      "type": "string",
      "value": "[variables('registryUrl')]"
    }
  }
}
